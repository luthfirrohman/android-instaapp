<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="id.app.instaapp.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="id.app.instaapp.ui.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="id.app.instaapp.ui.feed.FeedFragment"
        android:label="Feed">
        <action
            android:id="@+id/action_feedFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
        <action
            android:id="@+id/action_feedFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_feedFragment_to_mediaViewerFragment"
            app:destination="@id/mediaViewerFragment" />
    </fragment>

    <fragment
        android:id="@+id/createPostFragment"
        android:name="id.app.instaapp.ui.postcreate.CreatePostFragment"
        android:label="Create">
        <action
            android:id="@+id/action_createPostFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="id.app.instaapp.ui.postdetail.PostDetailFragment"
        android:label="Post Detail">
        <argument
            android:name="postId"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
        <argument
            android:name="caption"
            app:argType="string" />
        <argument
            android:name="mediaUrl"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="mediaType"
            app:argType="string"
            android:defaultValue="IMAGE" />
        <action
            android:id="@+id/action_postDetailFragment_to_mediaViewerFragment"
            app:destination="@id/mediaViewerFragment" />
    </fragment>

    <fragment
        android:id="@+id/mediaViewerFragment"
        android:name="id.app.instaapp.ui.mediaviewer.MediaViewerFragment"
        android:label="Media">
        <argument
            android:name="mediaUrl"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="mediaType"
            app:argType="string"
            android:defaultValue="IMAGE" />
    </fragment>
</navigation>
